<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.edu.hdu.doodler.MainActivity">

    <ImageView
        android:id="@+id/undo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="15dp"
        android:elevation="8dp"
        android:src="@drawable/ic_undo_black_24dp" />

    <ImageView
        android:id="@+id/eraser_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="top|left"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:focusable="true"
        android:elevation="8dp"
        android:src="@drawable/eraser" />

    <ImageView
        android:id="@+id/redo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="75dp"
        android:layout_marginRight="15dp"
        android:elevation="8dp"
        android:src="@drawable/ic_redo_black_24dp" />

    <ImageView
        android:id="@+id/stroke_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="75dp"
        android:layout_marginRight="10dp"
        android:elevation="8dp"
        android:src="@drawable/ic_collections_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/size_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:text="画笔大小" />

                <SeekBar
                    android:id="@+id/pen_size_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:gravity="center" />


                <ImageView
                    android:id="@+id/photo_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/ic_add_circle_outline_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:text="画笔透明" />

                <SeekBar
                    android:id="@+id/pen_alpha_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:max="255"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/clear_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:src="@drawable/ic_delete_black_24dp" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/sp_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/size_layout"
            android:background="@color/gray">

        </View>

        <cn.edu.hdu.doodler.view.DoodleView
            android:id="@+id/scratch_pad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/sp_line"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/toolsBGColor"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_save_black_24dp" />

            <ImageView
                android:id="@+id/share_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_share_black_24dp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="#414141">

            </View>

            <ImageView
                android:id="@+id/pen_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_edit_black_24dp" />


            <ImageView
                android:id="@+id/color_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_color_lens_black_24dp" />

            <ImageView
                android:id="@+id/background_color_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_format_color_fill_black_24dp" />

        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>